{
	"manifest_version": 2,
	"name": "Session Restore",
	"short_name": "Session Restore",
	"version": "5.1",
	"author": "Kaligula",

	"description": "I will regularly and silently save your open tabs and let you restore them i.e. in case of a browser crash",
	"homepage_url": "https://github.com/Vinne2/SessionRestore-for-chrome",
	"minimum_chrome_version": "18",
	"permissions": [
		"tabs",
		"alarms",
		"storage"
	],

	"icons": {
		"16" : "images/icon-16.png",
		"48" : "images/icon-48.png",
		"96" : "images/icon-96.png",
		"128" : "images/icon-128.png"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_icon": "images/icon.png"
	},
	"options_page": "sessions.html"
}